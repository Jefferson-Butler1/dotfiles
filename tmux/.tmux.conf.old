# Performance settings
set-option -g focus-events on
set-option -sg escape-time 10
set-option -g history-limit 50000

# Window and pane settings
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on
set -g display-time 4000
set -g status-interval 2

# Window management
bind c new-window -c "#{pane_current_path}"
bind -r Tab select-pane -t :.+

# Quick window switching
bind -n M-1 select-window -t 1
bind -n M-2 select-window -t 2
bind -n M-3 select-window -t 3
bind -n M-4 select-window -t 4
bind -n M-5 select-window -t 5

# Session management
bind S choose-session
bind N new-session

# Vi mode
setw -g mode-keys vi
bind Enter copy-mode

# Activity monitoring
setw -g monitor-activity on
set -g visual-activity off

# Split panes (maintain current directory)
bind v split-window -h -c "#{pane_current_path}"
bind s split-window -v -c "#{pane_current_path}"
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"

# Status bar content
set -g status-left "#{session_name}"
set -g status-right "#{pane_current_path} %Y-%m-%d %H:%M "
set -g status-left-length 100
set -g status-right-length 100

# Window status format
set -g window-status-format " #I #W "
set -g window-status-current-format " #I #W "

# Plugins
set -g @plugin 'tmux-plugins/tpm'
# set -g @plugin 'catppuccin/tmux'  # Disabled - using custom vague theme
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @plugin 'Jefferson-Butler1/Vague.tmux'

# Resurrect/Continuum settings
set -g @resurrect-capture-pane-contents 'on'
set -g @continuum-restore 'on'
set -g @continuum-save-interval '15'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'

